{
  "manifest_version": 3,
  "name": "Note + Focus Timer",
  "version": "2.0",
  "description": "Chuyển đổi văn bản tiếng Việt và timer tập trung tối giản - Vietnamese text converter with minimalist focus timer",
  "side_panel": {
    "default_path": "popup.html"
  },
  "action": {
    "default_icon": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Comma"
      },
      "description": "Mở tiện ích chuyển đổi văn bản"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardWrite",
    "clipboardRead",
    "storage",
    "sidePanel",
    "contextMenus",
    "downloads",
    "notifications"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  }
}